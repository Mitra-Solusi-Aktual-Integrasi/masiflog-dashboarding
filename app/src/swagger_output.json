{
  "openapi": "3.0.0",
  "info": {
    "version": "0.0.1",
    "title": "Swagger",
    "description": "This is a simple CRUD API application made with Express and documented with Swagger",
    "license": {
      "name": "MIT",
      "url": "https://spdx.org/licenses/MIT.html"
    },
    "contact": {
      "name": "Iqbal Tawakal",
      "url": "https://www.linkedin.com/in/iqbaltaws/",
      "email": "iqtwkl@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080/api/",
      "description": ""
    }
  ],
  "paths": {
    "/": {
      "get": {
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/auth/login/{app_id}": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "app_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/loginOutputSchema"
                }
              }
            }
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/loginInputSchema"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "loginInputSchema": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "username"
          },
          "password": {
            "type": "string",
            "example": "somepassword"
          }
        },
        "required": [
          "username",
          "password"
        ]
      },
      "loginOutputSchema": {
        "type": "object",
        "properties": {
          "status": {
            "type": "boolean",
            "example": true
          },
          "token": {
            "type": "string",
            "example": "token"
          },
          "refresh": {
            "type": "string",
            "example": "refresh-token"
          }
        }
      }
    }
  }
}