{
    "compilerOptions": {
        "module": "commonjs",
        "baseUrl": "./",
        "outDir": "build",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["es6"],
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
      },
      "include": [
        "**.ts",
        "**.tsx",
        "**.jsx",
        "./app/src/swagger_output.json"
      ],
      "exclude": [
        "./frontend"
      ]
}